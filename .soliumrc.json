{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "imports-on-top": ["error"],
    "pragma-on-top": ["error"],
    "mixedcase": 0,
    "camelcase": ["warning"],
    "uppercase": ["warning"],
    "operator-whitespace": 0,
    "conditionals-whitespace": ["error"],
    "comma-whitespace": ["error"],
    "semicolon-whitespace": ["error"],
    "function-whitespace": ["error"],
    "variable-declarations": ["error"],
    "no-experimental": 0,
    "lbrace": 0,
    "max-len": ["error", 100],
    "indentation": ["error", 4],
    "quotes": ["error", "double"],
    "arg-overflow": ["warning", 3],
    "error-reason": ["error"],
    "visibility-first": ["error"],
    "emit": ["error"],
    "no-constant": ["error"],
    "value-in-payable": ["error"],
    "no-empty-blocks": ["error"],
    "linebreak-style": ["error", "unix"],
    "security/enforce-explicit-visibility": ["error"],
    "security/no-block-members": 0,
    "security/no-named-returns": ["error"],
    "security/no-suicide-or-selfdestruct": ["error"],
    "security/no-var": ["error"]
  }
}
